<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yongoe.ecy.project.mapper.RubbishMapper">

    <!--    获取分页数据-->
    <select id="getRubbishByPage" resultType="com.yongoe.ecy.project.entity.Rubbish">
        select *
        from  t_rubbish
        <where>
            <if test="null != rubbish.id">
                and id = #{rubbish.id}
            </if>
            <if test="null != rubbish.status and ''!=rubbish.status">
                and status LIKE CONCAT('%',#{rubbish.status  },'%')
            </if>
            <if test="null != rubbish.img and ''!=rubbish.img">
                and img LIKE CONCAT('%',#{rubbish.img  },'%')
            </if>
            <if test="null != rubbish.detials and ''!=rubbish.detials">
                and detials LIKE CONCAT('%',#{rubbish.detials  },'%')
            </if>
            <if test="null != rubbish.trashCan and ''!=rubbish.trashCan">
                and trash_can LIKE CONCAT('%',#{rubbish.trashCan  },'%')
            </if>
            <if test="null != rubbish.trashCanType and ''!=rubbish.trashCanType">
                and trash_can_type LIKE CONCAT('%',#{rubbish.trashCanType  },'%')
            </if>
            <if test="null != rubbish.trashCanAddress and ''!=rubbish.trashCanAddress">
                and trash_can_address LIKE CONCAT('%',#{rubbish.trashCanAddress  },'%')
            </if>
            <if test="null != rubbish.createTime">
                and create_time = #{rubbish.createTime}
            </if>
            <if test="null != rubbish.putTime">
                and put_time = #{putTime}
            </if>
            <if test="null != rubbish.updateTime">
                and update_time = #{rubbish.updateTime}
            </if>
            <if test="null != rubbish.createBy and ''!=rubbish.createBy">
                and create_by LIKE CONCAT('%',#{rubbish.createBy  },'%')
            </if>
            <if test="null != rubbish.updateBy and ''!=rubbish.updateBy">
                and update_by LIKE CONCAT('%',#{rubbish.updateBy  },'%')
            </if>
        </where>
        order by id desc
    </select>

</mapper>